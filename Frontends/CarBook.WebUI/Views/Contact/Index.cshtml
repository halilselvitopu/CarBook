@model CreateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            @await Component.InvokeAsync("FooterContact")
            <div class="col-md-8 block-9 mb-md-5">
                <form method="post" class="bg-light p-5 contact-form">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="FirstName" placeholder="Adınız">
                    </div>
                   <div class="form-group">
                    <input type="text" class="form-control" asp-for="LastName" placeholder="Soyadınız">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email Adresiniz">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Subject" placeholder="Konu">
                    </div>
                    <div class="form-group">
                        <textarea cols="30" rows="7" asp-for="Message" class="form-control" placeholder="Mesajınız"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Mesajı Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div id="map" class="bg-white"></div>
            </div>
        </div>
    </div>
</section>

