
<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
<div class="row">
    @for (int i = 0; i < Math.Ceiling((double)Model.Count / 6); i++)
    {
        <div class="col-md-4">
            <ul class="features">
                @for (int a = i * 6; a < Math.Min((i + 1) * 6, Model.Count); a++)
                {
                    <li class="@(Model[a].IsAvailable ? "check" : "remove")">
                        <span class="ion-ios-@(Model[a].IsAvailable ? "checkmark" : "close")"></span>
                        @Model[a].FeatureName
                    </li>
                }
            </ul>
        </div>
    }
</div>
</div>