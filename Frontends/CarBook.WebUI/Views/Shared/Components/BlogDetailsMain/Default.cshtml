@model ResultBlogByIdDto

<div class="col-md-8 ftco-animate">
    <h2 class="mb-3">@Model.Title</h2>
    <p>@Model.Content</p>
    
    @await Component.InvokeAsync("BlogDetailTagCloudByBlog", new { id = ViewBag.BlogId})

    @await Component.InvokeAsync("BlogDetailAboutAuthor", new { id = ViewBag.BlogId })
    


    <div class="pt-5 mt-5">
        <h3 class="mb-5">@ViewBag.commentCount Yorum</h3>
        @await Component.InvokeAsync("CommentListByBlog", new{id = ViewBag.BlogId})
        
        <!-- END comment-list -->
        @await Component.InvokeAsync("LeaveAComment")
        @await Html.PartialAsync("~/Views/Blog/AddComment.cshtml", new { id = ViewBag.BlogId })
        
    </div>

</div>
