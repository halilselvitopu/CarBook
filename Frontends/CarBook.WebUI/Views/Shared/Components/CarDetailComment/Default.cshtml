@using CarBook.Dto.ReviewDtos
@model List<ResultReviewByCarIdDto>

<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
	<div class="row">
		<div class="col-md-7">
			<h3 class="head">@Model.Count Yorum</h3>
			@foreach (var item in Model)
			{
				
			
			<div class="review d-flex">
				<div class="user-img" style="background-image: url(@item.Image)"></div>
				<div class="desc">
					<h4>
						<span class="text-left">@item.CustomerFirstName @item.CustomerLastName</span>
						<span class="text-right">@item.CommentDate</span>
					</h4>
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
						</span>
						<span class="text-right"><a href="#" class="reply"><i class="icon-reply"></i></a></span>
					</p>
					<p>@item.Comment</p>
				</div>
			</div>
			}
		</div>
			
		<div class="col-md-5">
			<div class="rating-wrap">
				<h3 class="head">Değerlendirme Sonuçları</h3>
				<div class="wrap">
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							(77%)
						</span>
						<span>20 Değerlendirme</span>
					</p>
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							(12%)
						</span>
						<span>10 Değerlendirme</span>
					</p>
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							(5%)
						</span>
						<span>5 Değerlendirme</span>
					</p>
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							(4%)
						</span>
						<span>4 Değerlendirme</span>
					</p>
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							(1%)
						</span>
						<span>1 Değerlendirme</span>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>
