@model List<ResultBlogsWithAuthorsDto>
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Bloglar</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Eklenen Son Blogları Buradan Görüntüleyebilirsiniz
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tr>
                        <th>Blog Başlığı</th>
                        <th>Yazar</th>
                        <th>Bloğu Aç</th>
                    </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal">@item.Title</h5></td>
                                <td><h5 class="font-size-17 mb-1 font-weight-normal"> @item.AuthorFirstName @item.AuthorLastName</h5></td>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal"><a href="/Blog/BlogDetail/@item.Id" class="btn btn-primary">Bloğu Aç</a></h5></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div>