@model UpdateCarDto
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Araç Güncellem Sayfası</h4>
                        <p class="card-subtitle mb-4">Araç ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işleminizi tamamlayabilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label>Marka</label>
                                <select asp-for="BrandId" asp-items="@ViewBag.BrandList" class="form-control">

                                    <option value="">-- Seçiniz --</option>

                                </select>
                            </div>
                            <div class="form-group">
                                <label>Model</label>
                                <input type="text" class="form-control" asp-for="Model" placeholder="Model girişi yapınız.">
                            </div>
                            <div class="form-group">
                                <label>Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Kapak fotoğrafı için link giriniz.">
                            </div>
                            <div class="form-group">
                                <label>Kilometre</label>
                                <input type="text" class="form-control" asp-for="Mileage" placeholder="Kilometre bilgisi giriniz.">
                            </div>
                            <div class="form-group">
                                <label>Vites Türü</label>
                                <input type="text" class="form-control" asp-for="Transmission" placeholder="Vites türü giriniz.">
                            </div>
                            <div class="form-group">
                                <label>Koltuk Sayısı</label>
                                <input type="number" class="form-control" asp-for="Seat" placeholder="Koltuk sayısını seçiniz.">
                            </div>
                            <div class="form-group">
                                <label>Bagaj Sayısı</label>
                                <input type="number" class="form-control" asp-for="Luggage" placeholder="Bagaj sayısını giriniz.">
                            </div>
                            <div class="form-group">
                                <label>Yakıt Türü</label>
                                <input type="text" class="form-control" asp-for="Fuel" placeholder="Yakıt türü giriniz.">
                            </div>
                            <div class="form-group">
                                <label>Detay Fotoğrafı</label>
                                <input type="text" class="form-control" asp-for="DetailImageUrl" placeholder="Araç detayında görünmesini istediğiniz kapak fotoğrafı linkini giriniz.">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Bilgilerini Güncelle</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->
    <!-- end col -->
</div>
<!-- end page title -->

