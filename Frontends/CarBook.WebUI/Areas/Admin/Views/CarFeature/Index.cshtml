@using CarBook.Dto.CarFeatureDtos
@model List<ResultCarFeatureByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="Brandd">
                    <div class="Brandd-body">
                        <h4 class="Brandd-title">Araca Ait Özellikler Listesi</h4>
                        <p class="Brandd-subtitle mb-4">
                            Araca Ait Özellikler ile ilgili işlemleri bu bölümden düzenleyebilirsiniz.
                        </p>
                        <form method="post">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model[i].Id" />
                                    <input type="hidden" asp-for="@Model[i].FeatureName" />
                                    <input type="checkbox" asp-for="@Model[i].IsAvailable" class="form-check-input" />
                                    <label class="form-check-label" for="@Model[i].IsAvailable">@Model[i].FeatureName</label>
                                </div>
                            }
                            <br />
                            <button class="btn btn-success">Değişiklikleri Kaydet</button>
                        </form>
                    </div>
                    <!-- end Brandd-body-->
                </div>
                <!-- end Brandd -->

            </div>
            <!-- end col -->
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>

