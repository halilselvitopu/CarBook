@model CreateAuthorDto
@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Yazar Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Yazar ekleme işlemini buradan yapabilirsiniz.
                        </p>

                        <form method="post">
                            <div class="form-group">
                                <label>Ad</label>
                                <input type="text" class="form-control" asp-for="FirstName" placeholder="Ad girişi yapınız.">
                                <label>Soyad</label>
                                <input type="text" class="form-control" asp-for="LastName" placeholder="Soyad girişi yapınız.">
                                <label>Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" placeholder="Açıklama girişi yapınız.">
                                <label>Yazar Görseli</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Görsel linki girişi yapınız.">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->
    <!-- end col -->
</div>
<!-- end page title -->

